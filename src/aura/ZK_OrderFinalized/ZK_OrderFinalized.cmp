<aura:component description="ZK_OrderFinalized">

    <aura:attribute name="redirectToBank" type="Boolean" default="false"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-grid_vertical slds-p-around_large slds-grid_vertical-align-center "
         style="height: 100%; width: 100%">

        <div>
            <h3 style="color: #29a329;"
                class="slds-text-heading_medium slds-text-align_center"> {!$Label.c.ZK_Order_Thanks} </h3>
        </div>

        <aura:if isTrue="{!v.redirectToBank}">
            <h3 class="slds-text-heading_small slds-m-top_small slds-text-align_center">
                {!$Label.c.ZK_Order_Bank_Redirection}
            </h3>
        </aura:if>

    </div>

</aura:component>
