<aura:component description="ZK_OrdersHistory"
                controller="ZK_OrdersHistoryController"
                implements="forceCommunity:availableForAllPageTypes">

    <aura:attribute name="orders" type="Object[]"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div>

        <h1 class="slds-text-heading_medium slds-m-top_medium"> {!$Label.c.ZK_Title_Orders_History} </h1>

        <div class="slds-grid slds-grid_vertical">

            <aura:iteration items="{!v.orders}" var="order">
                <div class="slds-m-top_xx-large">
                    <c:ZK_OrderHistoryPosition orderPosition="{!order}"/>
                </div>
            </aura:iteration>

        </div>

    </div>

</aura:component>
